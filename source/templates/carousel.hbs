{{>header}}

  <div class="script-header">
    <h1>{{title}}</h1>
    <a href="docs.html#carousel">Documentation</a>
  </div>
      
  <div class="carousel animals" id="initCarousel">
    <ul>
    {{#items}}
      <li class="carousel-slide"><img alt="" src="images/carousel-imgs/{{this}}.jpg" /></li>
    {{/items}}
    </ul>
  </div>
  
  <button id="carouselNext">Next button</button>
  <button id="carouselPrev">Prev button</button>

  <div class="carousel-status">
    <p>This carousel is initialised in Javascript and has a specific callback function.</p>
    Current Index: <span id="indexNum">0</span>
  </div>

  <div class="fixer" style="height:70px;"></div>

  <div class="carousel animals" data-carousel="rotate:true:dots:true">
    <ul>
    {{#items}}
      <li class="carousel-slide"><img alt="" src="images/carousel-imgs/{{this}}.jpg" /></li>
    {{/items}}
    </ul>
  </div>

{{#> footer}}
  <script>
    var el = ML.$('initCarousel');
    var carousel = new ML.Carousel(el, {
      dots: true
    }, function(index) {
      ML.$('indexNum').innerHTML = index;
    })

    ML.El.evt(ML.$('carouselNext'), 'click', function(e) {
      carousel.next();
    });

    ML.El.evt(ML.$('carouselPrev'), 'click', function(e) {
      carousel.prev();
    });

    carousel.init();
  </script>
{{/footer}}